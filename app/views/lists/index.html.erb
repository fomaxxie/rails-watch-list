<h1>List</h1>
<ul class="list-unstyled">
    <% @lists.each do |list| %>
      <li class="card-category">
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url('<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>')">
        <%= list.name %> <%= link_to "See this list", list_path(list) %>
        <%= link_to "🗑️", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% else %>
        <div class="card-category" style="background-image: url('<%= image_path "pic20.jpg" %>')">
        <%= list.name %> <%= link_to "See this list", list_path(list) %>
        <%= link_to "🗑️", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      <% end %>
      </li>
  <% end %>
</ul>

<%= link_to "Create a new list", new_list_path %>
