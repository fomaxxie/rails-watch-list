<div class="container p-4 d-flex justify-content-center">
  <h1>Create new movie list here</h1>
    <div class="position-absolute top-50 start-50 translate-middle", style="width: 32rem;">
      <%= simple_form_for [@list] do |f| %>
        <%= f.input :name, placeholder: 'Dramas' %>
        <%= f.input :photo, as: :file %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Go back", lists_path, class: "btn btn-secondary my-4" %>
    </div>
</div>
